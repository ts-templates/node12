{
  "name": "@ts-templates/node12",
  "version": "0.1.0",
  "description": "Template for TypeScript project using Node.js v12",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint '**/*.{js,ts}'",
    "prebuild": "npm run clean",
    "prepare": "husky install",
    "start": "ts-node src/main.ts",
    "test": "jest --passWithNoTests"
  },
  "engines": {
    "node": "12.20.2"
  },
  "devDependencies": {
    "@jest/types": "27.0.6",
    "@tsconfig/node12": "1.0.9",
    "@types/jest": "27.0.2",
    "@types/node": "12.20.15",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "eslint": "8.3.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.1",
    "husky": "7.0.4",
    "jest": "27.0.6",
    "lint-staged": "12.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.5",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "license": "MIT"
}
